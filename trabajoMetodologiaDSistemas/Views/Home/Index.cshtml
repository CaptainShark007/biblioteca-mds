@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Sistema de Gestión Bibliotecaria</h1>
                <p class="lead text-muted">Seleccione la operación que desea realizar</p>
            </div>

            <!-- Menú principal según diagrama de actividad -->
            <div class="row g-4 mb-5">
                <!-- Solicitar Préstamo -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 text-center p-4 border-0 shadow-sm hover-card">
                        <div class="mb-3">
                            <i class="bi bi-book-half text-primary" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Solicitar Préstamo</h4>
                        <p class="text-muted mb-4">Solicitar el préstamo de un libro disponible en la biblioteca</p>
                        <div class="mt-auto">
                            <a asp-controller="Prestamo" asp-action="Solicitar" class="btn btn-primary btn-lg w-100">
                                Solicitar <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Devolver Libro -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 text-center p-4 border-0 shadow-sm hover-card">
                        <div class="mb-3">
                            <i class="bi bi-arrow-return-left text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Devolver Libro</h4>
                        <p class="text-muted mb-4">Registrar la devolución de un libro prestado anteriormente</p>
                        <div class="mt-auto">
                            <a asp-controller="Prestamo" asp-action="Devolver" class="btn btn-success btn-lg w-100">
                                Devolver <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Registrarse como Socio -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 text-center p-4 border-0 shadow-sm hover-card">
                        <div class="mb-3">
                            <i class="bi bi-person-plus-fill text-info" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Registrarse</h4>
                        <p class="text-muted mb-4">Inscribirse como nuevo socio de la biblioteca</p>
                        <div class="mt-auto">
                            <a asp-controller="Socio" asp-action="Registrarse" class="btn btn-info btn-lg w-100 text-white">
                                Registrarse <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Accesos adicionales -->
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="mb-3">
                                <i class="bi bi-search me-2 text-primary"></i>Consultas
                            </h5>
                            <p class="text-muted small mb-3">Consulte el estado de sus préstamos y multas</p>
                            <div class="d-grid gap-2">
                                <a asp-controller="Socio" asp-action="ConsultarPrestamos" class="btn btn-outline-secondary">
                                    <i class="bi bi-journal-text me-2"></i>Mis Préstamos
                                </a>
                                <a asp-controller="Socio" asp-action="ConsultarMultas" class="btn btn-outline-secondary">
                                    <i class="bi bi-exclamation-triangle me-2"></i>Mis Multas
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="mb-3">
                                <i class="bi bi-gear me-2 text-primary"></i>Panel Bibliotecario
                            </h5>
                            <p class="text-muted small mb-3">Acceso al panel de administración del sistema</p>
                            <div class="d-grid gap-2">
                                <a asp-controller="Bibliotecario" asp-action="Index" class="btn btn-outline-dark">
                                    <i class="bi bi-speedometer2 me-2"></i>Acceder al Panel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
    }

    .card {
        transition: all 0.2s ease;
    }
</style>
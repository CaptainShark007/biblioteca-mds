@{
    ViewData["Title"] = "Solicitar Préstamo";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-book-half me-2 text-primary"></i>Solicitar Préstamo de Libro
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Mensajes -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-x-circle-fill me-2"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <div>@ViewBag.Success</div>
                        </div>
                    }

                    <form asp-action="Solicitar" method="post">
                        <!-- Paso 1: Ingresar número de socio -->
                        @if (ViewBag.LibrosDisponibles == null)
                        {
                            <div class="mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <span class="badge bg-primary rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">1</span>
                                    <h5 class="mb-0 fw-semibold">Identificación del Socio</h5>
                                </div>
                                
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-1"></i>Número de Socio
                                </label>
                                <input type="text" name="numeroSocio" class="form-control form-control-lg" 
                                       placeholder="Ingrese su número de socio" required />
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle me-1"></i>Ejemplo: NS000001
                                </small>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" name="accion" value="buscarSocio" class="btn btn-primary btn-lg">
                                    <i class="bi bi-arrow-right-circle me-2"></i>Continuar
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-arrow-left me-2"></i>Cancelar
                                </a>
                            </div>
                        }
                        else
                        {
                            <!-- Paso 2: Seleccionar libro -->
                            <input type="hidden" name="numeroSocio" value="@ViewBag.NumeroSocio" />
                            
                            <div class="alert alert-info d-flex align-items-center mb-4">
                                <i class="bi bi-person-check-fill me-2 fs-5"></i>
                                <div>
                                    <strong>Socio:</strong> @ViewBag.NombreSocio 
                                    <span class="badge bg-info ms-2">@ViewBag.NumeroSocio</span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-primary rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">2</span>
                                <h5 class="mb-0 fw-semibold">Seleccionar Libro</h5>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-book me-1"></i>Libro a solicitar
                                </label>
                                <select name="idLibro" class="form-select form-select-lg" required>
                                    <option value="">-- Seleccione un libro --</option>
                                    @foreach (var libro in ViewBag.LibrosDisponibles)
                                    {
                                        <option value="@libro.Id">
                                            @libro.Titulo - @libro.Autor (@libro.CantidadDisponible disponibles)
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="card bg-light border-primary mb-4">
                                <div class="card-body">
                                    <h6 class="fw-semibold mb-3">
                                        <i class="bi bi-info-circle-fill text-primary me-2"></i>Condiciones del Préstamo
                                    </h6>
                                    <ul class="mb-0 small">
                                        <li class="mb-2">
                                            <i class="bi bi-calendar-check me-2"></i>Plazo de devolución: 7 días
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-clock-history me-2"></i>Penalización por retraso: 1 día de restricción por día de retraso
                                        </li>
                                        <li>
                                            <i class="bi bi-exclamation-triangle me-2"></i>Penalización por daños: 15 días de restricción
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" name="accion" value="confirmarPrestamo" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle-fill me-2"></i>Confirmar Préstamo
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar
                                </a>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

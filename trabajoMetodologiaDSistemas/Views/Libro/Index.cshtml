@model IEnumerable<trabajoMetodologiaDSistemas.Models.Libro>
@{
    ViewData["Title"] = "Gestión de Libros";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📚 Gestión de Libros</h2>
        <a asp-action="Create" class="btn btn-primary">➕ Nuevo Libro</a>
    </div>

    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">@TempData["MensajeExito"]</div>
    }

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Cantidad Disponible</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in Model)
            {
                <tr>
                    <td>@libro.Titulo</td>
                    <td>@libro.Autor</td>
                    <td>@libro.ISBN</td>
                    <td>@libro.CantidadDisponible</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@libro.Id" class="btn btn-warning btn-sm me-1">
                            ✏️ Editar
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@libro.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Seguro que desea eliminar este libro?')">
                                🗑️ Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

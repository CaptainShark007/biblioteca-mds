@{
    ViewData["Title"] = "Panel Bibliotecario";
    var estadisticas = ViewBag.Estadisticas as dynamic;
}

<div class="container-fluid py-4 min-vh-content">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Panel del Bibliotecario</h1>
        <p class="text-muted">Sistema integral de gestión bibliotecaria</p>
    </div>

    <!-- Estadísticas -->
    @if (estadisticas != null)
    {
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm bg-primary text-white h-100">
                    <div class="card-body py-4 d-flex flex-column justify-content-center">
                        <h3 class="fw-bold display-6">@estadisticas.TotalSocios</h3>
                        <p class="mb-0 fs-6">Total Socios</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm bg-success text-white h-100">
                    <div class="card-body py-4 d-flex flex-column justify-content-center">
                        <h3 class="fw-bold display-6">@estadisticas.TotalLibros</h3>
                        <p class="mb-0 fs-6">Total Libros</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm bg-warning text-dark h-100">
                    <div class="card-body py-4 d-flex flex-column justify-content-center">
                        <h3 class="fw-bold display-6">@estadisticas.PrestamosActivos</h3>
                        <p class="mb-0 fs-6">Préstamos Activos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm bg-info text-white h-100">
                    <div class="card-body py-4 d-flex flex-column justify-content-center">
                        <h3 class="fw-bold display-6">@estadisticas.NuevosSocios</h3>
                        <p class="mb-0 fs-6">Nuevos Socios</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Acciones principales -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-people-fill text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="fw-semibold mb-3">Gestión de Socios</h5>
                    <p class="text-muted mb-3 flex-grow-1">Administrar todos los socios del sistema</p>
                    <a class="btn btn-outline-primary w-100 mt-auto" asp-action="Socios">Gestionar Socios</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-journal-text text-success mb-3" style="font-size: 3rem;"></i>
                    <h5 class="fw-semibold mb-3">Gestión de Préstamos</h5>
                    <p class="text-muted mb-3 flex-grow-1">Ver y administrar préstamos activos</p>
                    <a class="btn btn-outline-success w-100 mt-auto" asp-action="Prestamos">Ver Préstamos</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-arrow-return-left text-warning mb-3" style="font-size: 3rem;"></i>
                    <h5 class="fw-semibold mb-3">Registrar Devolución</h5>
                    <p class="text-muted mb-3 flex-grow-1">Procesar devoluciones de libros</p>
                    <a class="btn btn-outline-warning w-100 mt-auto" asp-action="RegistrarDevolucion">Registrar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones secundarias -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-exclamation-triangle text-danger mb-3" style="font-size: 3rem;"></i>
                    <h5 class="fw-semibold mb-3">Gestión de Multas</h5>
                    <p class="text-muted mb-3 flex-grow-1">Administrar multas y sanciones</p>
                    <a class="btn btn-outline-danger w-100 mt-auto" asp-action="Multas">Ver Multas</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-journal-bookmark text-info mb-3" style="font-size: 3rem;"></i>
                    <h5 class="fw-semibold mb-3">Catálogo de Libros</h5>
                    <p class="text-muted mb-3 flex-grow-1">Gestionar el inventario de libros</p>
                    <a class="btn btn-outline-info w-100 mt-auto" asp-controller="Libro" asp-action="Index">Ver Libros</a>
                </div>
            </div>
        </div>
    </div>
</div>
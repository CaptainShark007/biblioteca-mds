@model trabajoMetodologiaDSistemas.Models.Socio
@{
    ViewData["Title"] = "Detalles del Socio";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Detalles del Socio</h2>
        <div>
            <a asp-action="Socios" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            No se encontró el socio solicitado.
        </div>
        return;
    }

    <div class="row g-4">
        <!-- Información básica -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Información Personal</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-semibold">Número de Socio:</label>
                        <p class="fs-5 text-primary fw-bold">@Model.NumeroSocio</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-semibold">Nombre:</label>
                        <p>@Model.Nombre</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-semibold">DNI:</label>
                        <p>@Model.Dni</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Estadísticas</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-semibold">Total Préstamos:</label>
                        <p>@(Model.Prestamos?.Count ?? 0)</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-semibold">Préstamos Activos:</label>
                        <p>@(Model.Prestamos?.Count(p => p.FechaDevolucion == null) ?? 0)</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-semibold">Multas Activas:</label>
                        <p>@(Model.Multas?.Count(m => m.Fecha.AddDays(m.DiasRestringido) > DateTime.Now) ?? 0)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Préstamos activos -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">Préstamos Activos</h5>
                </div>
                <div class="card-body">
                    @if (Model.Prestamos?.Any(p => p.FechaDevolucion == null) == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Libro</th>
                                        <th>Fecha Préstamo</th>
                                        <th>Fecha Límite</th>
                                        <th>Días Restantes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prestamo in Model.Prestamos.Where(p => p.FechaDevolucion == null))
                                    {
                                        var diasRestantes = (prestamo.FechaCorrespondienteDevolucion - DateTime.Now).Days;
                                        <tr>
                                            <td>@prestamo.Libro?.Titulo</td>
                                            <td>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                                            <td>@prestamo.FechaCorrespondienteDevolucion.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge @(diasRestantes < 0 ? "bg-danger" : diasRestantes <= 2 ? "bg-warning" : "bg-success")">
                                                    @(diasRestantes < 0 ? "Vencido" : $"{diasRestantes} días")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">No hay préstamos activos</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
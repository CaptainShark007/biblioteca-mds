@{
    ViewData["Title"] = "Consultar Mi Número de Socio";
}

<div class="container py-4">
    <div class="card shadow border-0 p-4 mx-auto" style="max-width: 500px;">
        <h2 class="fw-bold text-primary text-center mb-4">Consultar Mi Número de Socio</h2>

        <form asp-action="MiNumero" method="post">
            <div class="mb-3">
                <label for="dni" class="form-label fw-semibold">Ingrese su DNI:</label>
                <input type="text" name="dni" class="form-control" required placeholder="Ej: 12345678" />
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Panel" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
</div>
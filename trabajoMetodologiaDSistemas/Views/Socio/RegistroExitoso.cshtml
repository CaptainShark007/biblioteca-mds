@{
    ViewData["Title"] = "Registro Exitoso";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card text-center shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- Icono de éxito -->
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 6rem;"></i>
                    </div>

                    <h2 class="fw-bold text-success mb-3">Registro Exitoso</h2>
                    <p class="text-muted fs-5 mb-4">Tu solicitud de inscripción ha sido procesada correctamente</p>

                    <!-- Información del socio -->
                    <div class="card bg-light mb-4 shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="fw-semibold mb-4">
                                <i class="bi bi-person-check-fill text-primary me-2"></i>Datos del Nuevo Socio
                            </h5>
                            <div class="row text-start g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <small class="text-muted d-block">Nombre</small>
                                        <strong class="fs-6">@ViewBag.NombreSocio</strong>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <small class="text-muted d-block">DNI</small>
                                        <strong class="fs-6">@ViewBag.DniSocio</strong>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <hr class="my-2">
                                    <div class="text-center">
                                        <small class="text-muted d-block mb-2">Número de Socio</small>
                                        <span class="badge bg-primary fs-4 py-2 px-4">
                                            <i class="bi bi-person-badge me-2"></i>@ViewBag.NumeroSocio
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mensaje importante -->
                    <div class="alert alert-warning d-flex align-items-start text-start" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-4 flex-shrink-0"></i>
                        <div>
                            <strong class="d-block mb-1">Importante</strong>
                            Guarde su número de socio <strong class="text-primary">@ViewBag.NumeroSocio</strong> 
                            para realizar préstamos y consultas.
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-grid gap-3 mt-4">
                        <a asp-controller="Prestamo" asp-action="Solicitar" class="btn btn-primary btn-lg">
                            <i class="bi bi-book-fill me-2"></i>Solicitar un Préstamo
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-house-fill me-2"></i>Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
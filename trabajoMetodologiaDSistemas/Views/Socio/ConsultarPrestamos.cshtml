@{
    ViewData["Title"] = "Consultar Préstamos";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-11">
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-list-check me-2 text-primary"></i>Consultar Mis Préstamos
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Mensajes -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-x-circle-fill me-2"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form asp-action="ConsultarPrestamos" method="post">
                        @if (ViewBag.Prestamos == null)
                        {
                            <p class="text-muted mb-4">
                                <i class="bi bi-info-circle me-2"></i>Ingrese su número de socio para consultar el historial de préstamos
                            </p>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-1"></i>Número de Socio
                                </label>
                                <input type="text" name="numeroSocio" class="form-control form-control-lg" 
                                       placeholder="Ingrese su número de socio" required />
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle me-1"></i>Ejemplo: NS000001
                                </small>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-search me-2"></i>Consultar
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-arrow-left me-2"></i>Volver
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info d-flex align-items-center mb-4">
                                <i class="bi bi-person-check-fill me-2 fs-5"></i>
                                <div>
                                    <strong>Socio:</strong> @ViewBag.NombreSocio 
                                    <span class="badge bg-info ms-2">@ViewBag.NumeroSocio</span>
                                </div>
                            </div>

                            @if (ViewBag.Prestamos.Count > 0)
                            {
                                <h5 class="mb-3">
                                    <i class="bi bi-journal-text me-2"></i>Historial de Préstamos
                                    <span class="badge bg-secondary ms-2">@ViewBag.Prestamos.Count</span>
                                </h5>

                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th><i class="bi bi-book me-2"></i>Libro</th>
                                                <th><i class="bi bi-calendar-event me-2"></i>Fecha Préstamo</th>
                                                <th><i class="bi bi-calendar-check me-2"></i>Fecha Límite</th>
                                                <th><i class="bi bi-calendar-x me-2"></i>Fecha Devolución</th>
                                                <th><i class="bi bi-speedometer2 me-2"></i>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var prestamo in ViewBag.Prestamos)
                                            {
                                                var estado = prestamo.ConsultarEstado();
                                                var badgeClass = estado == "Devuelto" ? "bg-secondary" : 
                                                               estado == "Atrasado" ? "bg-danger" : "bg-success";
                                                var iconoEstado = estado == "Devuelto" ? "check-circle-fill" : 
                                                                estado == "Atrasado" ? "exclamation-circle-fill" : "clock-fill";
                                                
                                                <tr>
                                                    <td><strong>@prestamo.Libro?.Titulo</strong></td>
                                                    <td>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                                                    <td>@prestamo.FechaCorrespondienteDevolucion.ToString("dd/MM/yyyy")</td>
                                                    <td>@(prestamo.FechaDevolucion?.ToString("dd/MM/yyyy") ?? "-")</td>
                                                    <td>
                                                        <span class="badge @badgeClass">
                                                            <i class="bi bi-@iconoEstado me-1"></i>@estado
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info d-flex align-items-center">
                                    <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                                    <div>No tiene préstamos registrados</div>
                                </div>
                            }

                            <div class="mt-4">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-house-fill me-2"></i>Volver al Inicio
                                </a>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
